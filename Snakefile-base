    input: contigs=input_polish_racon, reads=polish_reads_input
    params:
        mode=minimap2_mode,
        #reads=lambda w, input: input.reads.replace(".gz", ".b.gz")
    threads: lambda w: n_threads(w, "minimap2_threads")
    output:
        b=temp("{uuid}.{conf}.ctg.cns.{polishedprefix,.*}racon-{readtype,\w+}-{iteration,\d+}.fa.bam"),
        bai=temp("{uuid}.{conf}.ctg.cns.{polishedprefix,.*}racon-{readtype,\w+}-{iteration,\d+}.fa.bam.bai"),
    resources:
        benchmark=1,
    benchmark: "benchmarks/{uuid}.{conf}.ctg.cns.{polishedprefix,.*}racon-{readtype,\w+}-{iteration,\d+}.fa.bam"
    shell: "minimap2 -a -2 --sam-hit-only --secondary=no -Q -t {threads} -x {params.mode} {input.contigs} {input.reads} | samtools sort -T {wildcards.uuid}-A -m 4G -@ {threads} -o {output.b}; samtools index {output.b};"
    #shell: "cudamapper -w 10 -t 1000 -i 5000 {params.reads} {input.contigs} > {output}"

rule minimap2_racon_sam:
    input: contigs=input_polish_racon, reads=polish_reads_input
    params:
        mode=minimap2_mode,
        #reads=lambda w, input: input.reads.replace(".gz", ".b.gz")
    threads: lambda w: n_threads(w, "minimap2_threads")
    resources:
        benchmark=1,
    output:
        s=temp("{uuid}.{conf}.ctg.cns.{polishedprefix,.*}racon-{readtype,\w+}-{iteration,\d+}.fa.sam"),
