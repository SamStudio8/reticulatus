    input: "{uuid}.{conf,flye[A-z0-9_-]*}/assembly_graph.gfa"
    output: "{uuid}.{conf,flye[A-z0-9._-]*}.ctg.cns.gfa"
    shell: "python ../scripts/reduce_gfa.py {input} 50000 > {output}"

